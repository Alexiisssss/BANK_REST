<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!-- USERS -->
    <changeSet id="001-1-create-users" author="you">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(64)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_users_username"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- CARDS -->
    <changeSet id="001-2-create-cards" author="you">
        <createTable tableName="cards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_cards"/>
            </column>

            <column name="owner_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_cards_owner"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>

            <column name="encrypted_pan" type="VARCHAR(700)">
                <constraints nullable="false"/>
            </column>

            <column name="pan_mask" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="holder_name" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>

            <column name="expiry_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>

            <column name="balance" type="NUMERIC(19,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="version" type="BIGINT" defaultValue="0"/>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_cards_owner_id" tableName="cards">
            <column name="owner_id"/>
        </createIndex>
        <createIndex indexName="idx_cards_status" tableName="cards">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <!-- TRANSFERS -->
    <changeSet id="001-3-create-transfers" author="you">
        <createTable tableName="transfers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_transfers"/>
            </column>

            <column name="from_card_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_transfer_from_card"
                             referencedTableName="cards" referencedColumnNames="id"/>
            </column>

            <column name="to_card_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_transfer_to_card"
                             referencedTableName="cards" referencedColumnNames="id"/>
            </column>

            <column name="amount" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(255)"/>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_transfers_from" tableName="transfers">
            <column name="from_card_id"/>
        </createIndex>
        <createIndex indexName="idx_transfers_to" tableName="transfers">
            <column name="to_card_id"/>
        </createIndex>
        <createIndex indexName="idx_transfers_created_at" tableName="transfers">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
